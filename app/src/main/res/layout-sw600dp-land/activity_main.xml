<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.utilisateur.jeudepatience.MainActivity"
    android:background="@drawable/menubackground">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_gravity="left"
                android:id="@+id/btnBlackJack"
                android:layout_column="4"
                android:src="@drawable/blackjack"
                android:onClick="onBlackJackClick" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:id="@+id/btnPyramide"
                android:layout_column="7"
                android:src="@drawable/pyramide"
                android:onClick="onPyramidClick" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_gravity="right"
                android:id="@+id/btnSolitaire"
                android:layout_column="7"
                android:src="@drawable/solitaire"
                android:onClick="OnSolitaireClick" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="       BlackJack"
                android:layout_gravity="left"
                android:id="@+id/lblBlackJack"
                android:layout_column="4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Pyramide"
                android:layout_gravity="center"
                android:id="@+id/lblPyramid"
                android:layout_column="7"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_gravity="center"
                android:text="              Solitaire"
                android:id="@+id/lblSolitaire"
                android:layout_column="7"
                android:textAlignment="center" />
        </TableRow>

        <TableRow>
            <ImageView
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_gravity="left"
                android:id="@+id/btnVideoPoker"
                android:layout_column="4"
                android:src="@drawable/videopoker"
                android:onClick="onVideoPokerClick" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:id="@+id/btnPyramide2"
                android:layout_column="7"
                android:src="@drawable/jeu31"
                android:onClick="onJeuDu31Click" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_gravity="right"
                android:id="@+id/btnSolitaire2"
                android:layout_column="7"
                android:src="@drawable/inconnue" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="      Video Poker"
                android:id="@+id/lblVideoPoker"
                android:layout_column="4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Jeu du 31"
                android:id="@+id/lblJeu5"
                android:layout_column="7"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Inconnue"
                android:gravity="right"
                android:id="@+id/lblJeu6"
                android:layout_column="7"
                android:textAlignment="center" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>
    </TableLayout>
</RelativeLayout>
