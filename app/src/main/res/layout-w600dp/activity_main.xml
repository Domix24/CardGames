<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.utilisateur.jeudepatience.MainActivity"
    android:background="@drawable/menubackground">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="3dp"
                android:id="@+id/btnBlackJack"
                android:layout_column="4"
                android:src="@drawable/blackjack"
                android:onClick="onBlackJackClick" />

            <ImageButton
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="3dp"
                android:id="@+id/btnPyramide"
                android:layout_column="7"
                android:src="@drawable/pyramide"
                android:onClick="onPyramidClick" />

            <ImageButton
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="3dp"
                android:id="@+id/btnSolitaire"
                android:layout_column="7"
                android:src="@drawable/solitaire"
                android:onClick="onPyramidClick" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="BlackJack"
                android:id="@+id/lblBlackJack"
                android:layout_column="4"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Pyramide"
                android:id="@+id/lblPyramid"
                android:layout_column="7"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Solitaire"
                android:id="@+id/lblSolitaire"
                android:layout_column="7"
                android:textAlignment="center" />
        </TableRow>

        <TableRow>
            <ImageButton
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="3dp"
                android:id="@+id/btnVideoPoker"
                android:layout_column="4"
                android:src="@drawable/videopoker"
                android:onClick="onVideoPokerClick" />

            <ImageButton
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="3dp"
                android:id="@+id/btnJeu5"
                android:layout_column="7"
                android:src="@drawable/pyramide"
                android:onClick="onPyramidClick" />

            <ImageButton
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="3dp"
                android:id="@+id/btnJeu6"
                android:layout_column="7"
                android:src="@drawable/solitaire"
                android:onClick="onPyramidClick" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Video Poker"
                android:id="@+id/lblVideoPoker"
                android:layout_column="4"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Inconnue"
                android:id="@+id/lblJeu5"
                android:layout_column="7"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Iconnue"
                android:id="@+id/lblJeu6"
                android:layout_column="7"
                android:textAlignment="center" />

        </TableRow>
    </TableLayout>
</RelativeLayout>
